<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    tools:context=".BoatSonucMenu">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/boatImage"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/spinner_bg"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_directions_boat_24"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Gemi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="222dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cities1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_bg"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="turkey_cities2"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cities2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_bg"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="turkey_cities2"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="78dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_loop_24" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:layout_below="@+id/bottom_bar"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/ido1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#808080">

                <ImageView
                    android:layout_margin="6dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ido_bg"
                    android:elevation="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="İDO Deniz Otobüsü" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="14:00 --> 16:00" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="315dp"
                    android:layout_marginTop="55dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="110₺" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/budo1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#808080">

                <ImageView
                    android:layout_margin="6dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/budo_bg"
                    android:elevation="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="BUDO Deniz Otobüsü" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="15:15 --> 17:25" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="315dp"
                    android:layout_marginTop="55dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="251₺" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/budo2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#808080">

                <ImageView
                    android:layout_margin="6dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/budo_bg"
                    android:elevation="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="BUDO Deniz Otobüsü" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="18:00 --> 19:50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="315dp"
                    android:layout_marginTop="55dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="221₺" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ido2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#808080">

                <ImageView
                    android:layout_margin="6dp"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ido_bg"
                    android:elevation="3dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="İDO Deniz Otobüsü" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="100dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="18:30 --> 20:20" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="315dp"
                    android:layout_marginTop="55dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="serif"
                    android:text="210₺" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>