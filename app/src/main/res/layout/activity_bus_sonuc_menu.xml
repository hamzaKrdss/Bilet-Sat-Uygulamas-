      android:layout_height="match_parent"
      android:layout_below="@+id/bottom_bar"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
